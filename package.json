{
  "name": "sow-workbench-monorepo",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm --filter web dev\" \"pnpm --filter api dev\"",
    "dev:persistent": "pm2 start ecosystem.dev.config.js",
    "dev:stop": "pm2 stop ecosystem.dev.config.js",
    "dev:restart": "pm2 restart ecosystem.dev.config.js",
    "build": "pnpm --filter web build && pnpm --filter api build",
    "start": "concurrently \"pnpm --filter web start\" \"pnpm --filter api start\"",
    "start:pm2": "pm2 start ecosystem.production.config.js --env production",
    "stop:pm2": "pm2 stop ecosystem.production.config.js",
    "restart:pm2": "pm2 restart ecosystem.production.config.js",
    "reload:pm2": "pm2 reload ecosystem.production.config.js",
    "status:pm2": "pm2 status",
    "logs:pm2": "pm2 logs",
    "delete:pm2": "pm2 delete ecosystem.production.config.js",
    "clean": "pnpm --filter \"*\" clean"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.0"
  }
}
